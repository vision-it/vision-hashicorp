# This file is managed by Puppet

datacenter = "dc1"
data_dir = "/opt/nomad"
bind_addr = "0.0.0.0"
log_level = "WARN"

acl {
  enabled = true
}

advertise {
  http = "<%= @advertise_addr %>"
  rpc  = "<%= @advertise_addr %>"
  serf = "<%= @advertise_addr %>"
}

server {
    enabled = true
    ui = false
    bootstrap_expect = 1
    encrypt = "<%= @encrypt.unwrap %>"
    server_join {
        retry_join = [<%= @retry_join.map{|s| "\"#{s}\""}.join(', ')%>]
    }
}

consul {
  address = "127.0.0.1:8500"
}