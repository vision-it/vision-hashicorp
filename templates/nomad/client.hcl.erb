# This file is managed by Puppet

datacenter = "dc1"
data_dir = "/opt/nomad"
log_level = "WARN"

server {
 enabled = false
}

acl {
  enabled = true
}

advertise {
  http = "<%= @advertise_addr %>"
  rpc  = "<%= @advertise_addr %>"
  serf = "<%= @advertise_addr %>"
}

client {
 enabled = true
 server_join {
   retry_join = [<%= @retry_join.map{|s| "\"#{s}\""}.join(', ')%>]
 }
 options = {
   "docker.volumes.enabled" = true
 }
}
